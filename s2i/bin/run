#!/bin/bash

set -e

echo "---> Starting Spring Boot application"


if [ -d "build" ]; then
    #gradle build
    JAR_LOCATION="build"
else
    #maven build
    JAR_LOCATION="target"
fi
if [[ -n $(find $JAR_LOCATION -name *.war) ]]
then
    java -jar $JAVA_OPTS `find $JAR_LOCATION -name *.war`
else
    java -jar $JAVA_OPTS `find $JAR_LOCATION -name *.jar`
fi
