#!/bin/bash -e

pushd ${HOME} > /dev/null
artifact_path=""
for artifact_path in .m2 .gradle .target; do
  if [ -d ${artifact_path} ]; then 
    #echo "$(pwd)/${artifact_path} present, adding to tar source."
    tar_sources+=" $artifact_path"
  fi
done
echo "tar_sources=${tar_sources}"
if [ -n "${tar_sources}" ]; then
  tar cf - ${tar_sources}
fi
popd > /dev/null
